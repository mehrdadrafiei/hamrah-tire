{
  "info": {
      "name": "Hamrah Tire API",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
      {
          "key": "base_url",
          "value": "http://localhost:8000",
          "type": "string"
      }
  ],
  "item": [
      {
          "name": "Authentication",
          "item": [
              {
                  "name": "Login",
                  "request": {
                      "method": "POST",
                      "url": "{{base_url}}/api/auth/token/",
                      "header": [
                          {
                              "key": "Content-Type",
                              "value": "application/json"
                          }
                      ],
                      "body": {
                          "mode": "raw",
                          "raw": "{\n    \"username\": \"admin_user\",\n    \"password\": \"password123\"\n}"
                      }
                  }
              },
              {
                  "name": "Refresh Token",
                  "request": {
                      "method": "POST",
                      "url": "{{base_url}}/api/auth/token/refresh/",
                      "header": [
                          {
                              "key": "Content-Type",
                              "value": "application/json"
                          }
                      ],
                      "body": {
                          "mode": "raw",
                          "raw": "{\n    \"refresh\": \"{{refresh_token}}\"\n}"
                      }
                  }
              }
          ]
      },
      {
          "name": "Users",
          "item": [
              {
                  "name": "List Users",
                  "request": {
                      "method": "GET",
                      "url": "{{base_url}}/api/users/",
                      "auth": {
                          "type": "bearer",
                          "bearer": "{{access_token}}"
                      }
                  }
              },
              {
                  "name": "Create User",
                  "request": {
                      "method": "POST",
                      "url": "{{base_url}}/api/users/",
                      "auth": {
                          "type": "bearer",
                          "bearer": "{{access_token}}"
                      },
                      "header": [
                          {
                              "key": "Content-Type",
                              "value": "application/json"
                          }
                      ],
                      "body": {
                          "mode": "raw",
                          "raw": "{\n    \"username\": \"new_user\",\n    \"email\": \"new@example.com\",\n    \"password\": \"userpass123\",\n    \"role\": \"MINER\",\n    \"phone\": \"1234567890\"\n}"
                      }
                  }
              },
              {
                  "name": "Get User Details",
                  "request": {
                      "method": "GET",
                      "url": "{{base_url}}/api/users/1/",
                      "auth": {
                          "type": "bearer",
                          "bearer": "{{access_token}}"
                      }
                  }
              }
          ]
      },
      {
          "name": "Tires",
          "item": [
              {
                  "name": "List Tires",
                  "request": {
                      "method": "GET",
                      "url": "{{base_url}}/api/tires/",
                      "auth": {
                          "type": "bearer",
                          "bearer": "{{access_token}}"
                      }
                  }
              },
              {
                  "name": "Create Tire",
                  "request": {
                      "method": "POST",
                      "url": "{{base_url}}/api/tires/",
                      "auth": {
                          "type": "bearer",
                          "bearer": "{{access_token}}"
                      },
                      "header": [
                          {
                              "key": "Content-Type",
                              "value": "application/json"
                          }
                      ],
                      "body": {
                          "mode": "raw",
                          "raw": "{\n    \"serial_number\": \"TIRE003\",\n    \"model\": \"Model Z\",\n    \"size\": \"315/80R22.5\",\n    \"manufacturer\": \"Manufacturer C\",\n    \"purchase_date\": \"2024-01-26\",\n    \"status\": \"ORDERED\",\n    \"owner\": 2,\n    \"working_hours\": 0,\n    \"tread_depth\": 20.0\n}"
                      }
                  }
              },
              {
                  "name": "Get Tire Details",
                  "request": {
                      "method": "GET",
                      "url": "{{base_url}}/api/tires/1/",
                      "auth": {
                          "type": "bearer",
                          "bearer": "{{access_token}}"
                      }
                  }
              },
              {
                  "name": "Activate Warranty",
                  "request": {
                      "method": "POST",
                      "url": "{{base_url}}/api/tires/1/activate_warranty/",
                      "auth": {
                          "type": "bearer",
                          "bearer": "{{access_token}}"
                      }
                  }
              }
          ]
      },
      {
          "name": "Repair Requests",
          "item": [
              {
                  "name": "List Repair Requests",
                  "request": {
                      "method": "GET",
                      "url": "{{base_url}}/api/repair-requests/",
                      "auth": {
                          "type": "bearer",
                          "bearer": "{{access_token}}"
                      }
                  }
              },
              {
                  "name": "Create Repair Request",
                  "request": {
                      "method": "POST",
                      "url": "{{base_url}}/api/repair-requests/",
                      "auth": {
                          "type": "bearer",
                          "bearer": "{{access_token}}"
                      },
                      "header": [
                          {
                              "key": "Content-Type",
                              "value": "application/json"
                          }
                      ],
                      "body": {
                          "mode": "raw",
                          "raw": "{\n    \"tire\": 1,\n    \"description\": \"Puncture in sidewall\",\n    \"status\": \"PENDING\"\n}"
                      }
                  }
              },
              {
                  "name": "Get Repair Request Details",
                  "request": {
                      "method": "GET",
                      "url": "{{base_url}}/api/repair-requests/1/",
                      "auth": {
                          "type": "bearer",
                          "bearer": "{{access_token}}"
                      }
                  }
              }
          ]
      },
      {
          "name": "Technical Reports",
          "item": [
              {
                  "name": "List Technical Reports",
                  "request": {
                      "method": "GET",
                      "url": "{{base_url}}/api/technical-reports/",
                      "auth": {
                          "type": "bearer",
                          "bearer": "{{access_token}}"
                      }
                  }
              },
              {
                  "name": "Create Technical Report",
                  "request": {
                      "method": "POST",
                      "url": "{{base_url}}/api/technical-reports/",
                      "auth": {
                          "type": "bearer",
                          "bearer": "{{access_token}}"
                      },
                      "header": [
                          {
                              "key": "Content-Type",
                              "value": "application/json"
                          }
                      ],
                      "body": {
                          "mode": "raw",
                          "raw": "{\n    \"tire\": 1,\n    \"inspection_date\": \"2024-01-26T14:00:00Z\",\n    \"tread_depth\": 15.5,\n    \"working_hours\": 1000,\n    \"condition_rating\": 4,\n    \"notes\": \"Good condition, normal wear pattern\",\n    \"requires_immediate_attention\": false\n}"
                      }
                  }
              },
              {
                  "name": "Get Technical Report Details",
                  "request": {
                      "method": "GET",
                      "url": "{{base_url}}/api/technical-reports/1/",
                      "auth": {
                          "type": "bearer",
                          "bearer": "{{access_token}}"
                      }
                  }
              }
          ]
      },
      {
        "name": "Tire Filters",
        "item": [
            {
                "name": "Filter by Status",
                "request": {
                    "method": "GET",
                    "url": {
                        "raw": "{{base_url}}/api/tires/?status=IN_USE",
                        "host": ["{{base_url}}"],
                        "path": ["api", "tires"],
                        "query": [
                            {
                                "key": "status",
                                "value": "IN_USE"
                            }
                        ]
                    },
                    "auth": {
                        "type": "bearer",
                        "bearer": "{{access_token}}"
                    }
                }
            },
            {
                "name": "Search Tires",
                "request": {
                    "method": "GET",
                    "url": {
                        "raw": "{{base_url}}/api/tires/?search=Model",
                        "host": ["{{base_url}}"],
                        "path": ["api", "tires"],
                        "query": [
                            {
                                "key": "search",
                                "value": "Model"
                            }
                        ]
                    },
                    "auth": {
                        "type": "bearer",
                        "bearer": "{{access_token}}"
                    }
                }
            },
            {
                "name": "Filter by Working Hours Range",
                "request": {
                    "method": "GET",
                    "url": {
                        "raw": "{{base_url}}/api/tires/?min_working_hours=1000&max_working_hours=5000",
                        "host": ["{{base_url}}"],
                        "path": ["api", "tires"],
                        "query": [
                            {
                                "key": "min_working_hours",
                                "value": "1000"
                            },
                            {
                                "key": "max_working_hours",
                                "value": "5000"
                            }
                        ]
                    },
                    "auth": {
                        "type": "bearer",
                        "bearer": "{{access_token}}"
                    }
                }
            },
            {
                "name": "Combined Filters",
                "request": {
                    "method": "GET",
                    "url": {
                        "raw": "{{base_url}}/api/tires/?status=IN_USE&min_working_hours=1000",
                        "host": ["{{base_url}}"],
                        "path": ["api", "tires"],
                        "query": [
                            {
                                "key": "status",
                                "value": "IN_USE"
                            },
                            {
                                "key": "min_working_hours",
                                "value": "1000"
                            }
                        ]
                    },
                    "auth": {
                        "type": "bearer",
                        "bearer": "{{access_token}}"
                    }
                }
            }
        ]
    },
    {
        "name": "Repair Request Filters",
        "item": [
            {
                "name": "Filter by Status",
                "request": {
                    "method": "GET",
                    "url": {
                        "raw": "{{base_url}}/api/repair-requests/?status=PENDING",
                        "host": ["{{base_url}}"],
                        "path": ["api", "repair-requests"],
                        "query": [
                            {
                                "key": "status",
                                "value": "PENDING"
                            }
                        ]
                    },
                    "auth": {
                        "type": "bearer",
                        "bearer": "{{access_token}}"
                    }
                }
            },
            {
                "name": "Search by Tire Serial",
                "request": {
                    "method": "GET",
                    "url": {
                        "raw": "{{base_url}}/api/repair-requests/?search=TIRE001",
                        "query": [
                            {
                                "key": "search",
                                "value": "TIRE001"
                            }
                        ]
                    },
                    "auth": {
                        "type": "bearer",
                        "bearer": "{{access_token}}"
                    }
                }
            },
            {
                "name": "Filter by Date Range",
                "request": {
                    "method": "GET",
                    "url": {
                        "raw": "{{base_url}}/api/repair-requests/?start_date=2024-01-01&end_date=2024-12-31",
                        "query": [
                            {
                                "key": "start_date",
                                "value": "2024-01-01"
                            },
                            {
                                "key": "end_date",
                                "value": "2024-12-31"
                            }
                        ]
                    },
                    "auth": {
                        "type": "bearer",
                        "bearer": "{{access_token}}"
                    }
                }
            }
        ]
    },
    {
        "name": "Technical Report Filters",
        "item": [
            {
                "name": "Filter by Critical Reports",
                "request": {
                    "method": "GET",
                    "url": {
                        "raw": "{{base_url}}/api/technical-reports/?requires_immediate_attention=true",
                        "query": [
                            {
                                "key": "requires_immediate_attention",
                                "value": "true"
                            }
                        ]
                    },
                    "auth": {
                        "type": "bearer",
                        "bearer": "{{access_token}}"
                    }
                }
            },
            {
                "name": "Filter by Condition Rating",
                "request": {
                    "method": "GET",
                    "url": {
                        "raw": "{{base_url}}/api/technical-reports/?condition_rating=4",
                        "query": [
                            {
                                "key": "condition_rating",
                                "value": "4"
                            }
                        ]
                    },
                    "auth": {
                        "type": "bearer",
                        "bearer": "{{access_token}}"
                    }
                }
            },
            {
                "name": "Filter by Tread Depth Range",
                "request": {
                    "method": "GET",
                    "url": {
                        "raw": "{{base_url}}/api/technical-reports/?min_tread_depth=10&max_tread_depth=20",
                        "query": [
                            {
                                "key": "min_tread_depth",
                                "value": "10"
                            },
                            {
                                "key": "max_tread_depth",
                                "value": "20"
                            }
                        ]
                    },
                    "auth": {
                        "type": "bearer",
                        "bearer": "{{access_token}}"
                    }
                }
            },
            {
                "name": "Filter by Inspection Date",
                "request": {
                    "method": "GET",
                    "url": {
                        "raw": "{{base_url}}/api/technical-reports/?inspection_date_after=2024-01-01&inspection_date_before=2024-12-31",
                        "query": [
                            {
                                "key": "inspection_date_after",
                                "value": "2024-01-01"
                            },
                            {
                                "key": "inspection_date_before",
                                "value": "2024-12-31"
                            }
                        ]
                    },
                    "auth": {
                        "type": "bearer",
                        "bearer": "{{access_token}}"
                    }
                }
            }
        ]
    }
  ]
}